<!DOCTYPE html>
<html>
<head>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- 設定頁面標題 -->
    @{
        ViewData["Title"] = "排班系統";
    }

    <title>@ViewData["Title"]</title>

    <!-- 其他的 head 內容（如額外的 CSS 連結或樣式） -->
    <link href="~/css/styles.css" rel="stylesheet">
</head>
<body>
    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- 頁面內容 -->
    <!-- 會刪掉的title -->
    <h2 class="display-6 text-center mb-4">設置排班</h2>
    @* <br>
    <br>
    <br> *@

    @{
        ViewData["Title"] = "設置排班";
    }

    <div class="container">
        <!-- 顯示從 SetDocs/Index 傳過來的細分科別和病房資料 -->
        <div id="selected-info" class="mt-3">
            <p>細分科別: <span id="selected-subdepartment"></span></p>
            <p>病房: <span id="selected-ward"></span></p>
        </div>

        <!-- 醫師排班設置表格 -->
        <div class="schedule-table mt-4">
            <h2>排班設定</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>醫師</th>
                        <th>班數</th>
                        <th>日期設定</th>
                    </tr>
                </thead>
                    <tbody>
                        @foreach (var doctor in Model) // 假設 Model 是從後端傳來的醫生列表
                        {
                            <tr>
                                <td>@doctor.doctor_name</td> <!-- 這裡顯示每位醫生的名字 -->
                                <td><input type="number" min="1"></td>
                                <td>
                                    <input type="date">
                                    <button type="button" class="btn btn-secondary btn-add-date">+</button>
                                </td>
                            </tr>
                            <!-- 其他醫師排班行 -->
                        }  
                    </tbody>
            </table>
        </div>
    </div>


    <!-- 其他的 JavaScript 檔案或程式碼 -->
    <script src="~/js/setschedule.js" asp-append-version="true"></script>
</body>